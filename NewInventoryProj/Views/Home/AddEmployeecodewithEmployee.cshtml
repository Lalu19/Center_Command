
@{
    ViewBag.Title = "AddEmployeecodewithEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/assets/img/favicon.html">
    <title>Set Budget</title>
    <link rel="stylesheet" href="/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
</head>
<body>
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Add Employee code with Employee
            </h1>
            <ol class="breadcrumb">
                    <li>
                        <a href="@Url.Action("ListofEmployeecode","Home")" class="btn btn-round btn-primary right-side"><i class="fa fa-list"> List</i></a>
                    </li>
                </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">

                <div class="col-md-12">
                    <!-- Horizontal Form -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">   Add Employee code with Employee</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <table class="table table-responsive" style="margin-left:0%">
                            <tr>
                                <td>
                                    <label for="exampleCity" class="">Add Employee Code</label>
                                </td>

                                <td>
                                    <input name="EmployeeCode" id="EmployeeCode" type="number" style="color:black" class="form-control">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="exampleCity" class="">Add Employee Name</label>
                                </td>

                                <td>
                                    <input name="EmployeeName" id="EmployeeName" type="text" style="color:black" class="form-control">
                                </td>
                            </tr>

                            <tr>
                                <td></td>
                                <td>
                                    <a><button class="mt-2 btn btn-primary btn round center" onclick="SetEmployeecode()">Create</button></a>
                                    @*<input type="button" class="mt-2 btn btn-primary btn round center add-row" value="Add Row">*@

                                </td>
                            </tr>
                        </table>

                    </div>
                    <!-- /.box -->

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->


    </div>

    <!-- jQuery 3 -->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- DataTables -->
    <script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

    <script>
        function SetEmployeecode() {
            var EmployeeCode = document.getElementById("EmployeeCode").value;
            var EmployeeName = document.getElementById("EmployeeName").value;
            $.ajax({
                url: '/api/Inventory/SetEmpCodewithEmpname',
                dataType: 'json',
                type: 'Post',
                data: { EmployeeCode: EmployeeCode, EmployeeName: EmployeeName},

                success: function (data) {
                    //var data = $.parseJSON(data);
                    if (data == true) {
                        alert("Successfully Added");
                        location.reload();

                    } else if (data === false) {
                        alert("The Employee ID entered is already in the system");
                    } else {
                        alert("Something went wrong");
                    }
                }
            })
        }
    </script>
</body>

</html>